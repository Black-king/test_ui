[
    {
        "name": "设备列表",
        "command": "hdc list targets",
        "category": "device",
        "icon": "device",
        "tags": [
            "frequent"
        ]
    },
    {
        "name": "设备信息",
        "command": "hdc target mount",
        "type": "normal",
        "icon": "info"
    },
    {
        "name": "上传文件",
        "command": "hdc file send {local_path} {remote_path}",
        "type": "upload",
        "icon": "upload"
    },
    {
        "name": "下载文件",
        "command": "hdc file recv {remote_path} {local_path}",
        "category": "file",
        "type": "download",
        "icon": "download",
        "tags": [
            "frequent"
        ]
    },
    {
        "name": "安装应用",
        "command": "hdc install {local_path}",
        "category": "app",
        "type": "upload",
        "icon": "install",
        "tags": [
            "frequent"
        ]
    },
    {
        "name": "卸载应用",
        "command": "hdc uninstall {package_name}",
        "category": "app",
        "icon": "uninstall",
        "tags": [
            "dangerous"
        ]
    },
    {
        "name": "截图",
        "command": "hdc shell snapshot_display -f /data/screenshot_{timestamp}.png; hdc shell file recv /data/screenshot_{timestamp}.png \"screenshot_{timestamp}.png\"",
        "type": "screenshot",
        "icon": "screenshot"
    },
    {
        "name": "设备录屏",
        "command": "{\"start\": \"hdc shell screenrecord /data/local/tmp/screen_{timestamp}.mp4\", \"stop\": \"hdc shell pkill -SIGINT screenrecord\", \"export\": \"hdc file recv /data/local/tmp/screen_{timestamp}.mp4 ./screen_{timestamp}.mp4\"}",
        "type": "screen_record",
        "icon": "screen_record"
    },
    {
        "name": "系统配置信息",
        "command": "systeminfo",
        "type": "normal",
        "icon": "normal"
    },
    {
        "name": "文件夹快速打开",
        "command": "explorer {local_path}",
        "type": "normal",
        "icon": "normal"
    }
]